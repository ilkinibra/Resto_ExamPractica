        <section id="section">
            <div class="container">
                <div class="row">
                        <div class="col-6">
                            <div class="slider-text">
                                <h1 style="font-weight: 100; margin-top: 2rem;">@Model.pageIntros.Title</h1>
                                <h1 style="font-weight: 100;">@Model.pageIntros.SubTitle</h1>
                            </div>
                            <div class="slider-btn">
                                <button class="btn btn-danger">Explore Menu</button>
                                <a class="btn btn-light"><i class="fa-solid fa-film" style="font-size: 30px;"></i>Play Video</a>
                            </div>
                               <div class="title-icon text-center">
                            @foreach (var item in Model.icons)
                    {
                        
                         
                                <div class="icon1 ">
                                    @Html.Raw(item.IconUrl)
                                    <h3>@item.IconTitle</h3>
                                </div>
                            
                    }
                            </div>        
                        </div>
                        <div class="col-6">
                            <ul class="slides">
                                @foreach (var item in Model.sliders)
                        {
                            <input type="radio" name="radio-btn" id="img-1" checked />
                                <li class="slide-container">
                                    <div class="slide">
                                        <img src="./assets/img/@item.ImageUrl" />
                                    </div>
                                    <div class="nav">
                                        <label for="img-6" class="prev">&#x2039;</label>
                                        <label for="img-2" class="next">&#x203a;</label>
                                    </div>
                                </li>
                        }
                                
                            </ul>
                        </div>
                </div>
            </div>
        </section>

        <section id="about">
            <div class="container" style="margin-top: 9rem;">
                <div class="row">
                    <div class="col-6">
                        <img src="~/assets/img/@Model.about.ImageUrl" />
                    </div>
                    <div class="col-6">
                        <div class="about-title">
                            <h4>@Model.about.Title</h4>
                            <h2 style="font-size:20px">@Model.about.SubTitle</h2>
                            <p >@Model.about.Description</p>
                        </div>
                        <div class="about-card"  >
                            <div class="row row-cols-1 row-cols-md-3 g-4 d-flex">
                                @foreach (var item in Model.aboutImg)
                            {
                                   <div class="col">
                                <div class="card" >
                                    <img src="./assets/img/@item.ImageUrl" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Title</h5>
                                    </div>
                                </div>
                            </div>
                            }
                           </div>
                         </div>
                    </div>
                </div>
            </div>
        </section>


